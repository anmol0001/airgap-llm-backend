# ===============================
# Application Environment
# ===============================
NODE_ENV=development

# ===============================
# Server Configuration
# ===============================
PORT=8443
JSON_BODY_LIMIT=10kb

# ===============================
# LLM (Offline - Ollama)
# ===============================
LLM_BASE_URL=http://ollama:11434
LLM_MODEL=mistral-offline

# ===============================
# TLS (Internal HTTPS)
# ===============================
# Mounted via Docker volume
TLS_KEY_PATH=/certs/key.pem
TLS_CERT_PATH=/certs/cert.pem

# ===============================
# Storage (RAG)
# ===============================
STORAGE_PATH=./storage/embeddings.json

# ===============================
# Authentication (API Keys)
# ===============================
# Generate long random values in real setups
API_KEY_ADMIN=changeme-admin-key
API_KEY_READONLY=changeme-readonly-key

# ===============================
# File Upload Configuration
# ===============================
UPLOAD_DIR=/uploads
FILE_UPLOAD_LIMIT_MB=5

# ===============================
# Rate Limiting
# ===============================
RATE_LIMIT_WINDOW_MIN=1
RATE_LIMIT_MAX=10
